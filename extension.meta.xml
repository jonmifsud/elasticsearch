<?xml version="1.0" encoding="UTF-8"?>
<extension id="elasticsearch" status="released" xmlns="http://symphony-cms.com/schemas/extension/1.0">
	<name>ElasticSearch</name>
	<description>Integrates the powerful Lucene-based search engine, ElasticSearch, with Symphony.</description>
	<repo type="github">https://github.com/symphonists/elasticsearch</repo>
	<types>
		<type>Search</type>
	</types>
	<authors>
		<author>
			<name github="symphonists" symphony="community">Symphony Community</name>
		</author>
		<author>
			<name github="nickdunn" symphony="nickdunn">Nick Dunn</name>
			<website>http://nick-dunn.co.uk</website>
		</author>
		<author>
			<name github="jonmifsud" symphony="gunglien">Jon Mifsud</name>
			<website>http://jonmifsud.com</website>
		</author>
	</authors>
	<releases>
		<release version="0.5.0" date="2014-07-30" min="2.3.x">
			* Replaces Elastica Library with the official ElasticSearch Library
			* Works with Elastic Search 1.3
			* Replaces Facets with Aggregations
		</release>
		<release version="0.4.0" date="2012-03-28" min="2.3.x">
			* Works with ElasticSearch versions <= 0.9
		</release>
		<release version="0.3.1" date="2012-03-05" min="2.2.5" max="2.2.5" />
	</releases>
</extension>
